<image src='../../../static/read.png' />
<view class="container">



  <view class="page-body">
    <form catchsubmit="formSubmit" catchreset="formReset">




      <view class="page-section">
        <view class="page-section-title">我看了什么书</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input class="weui-input" name="bookName" placeholder="输入书名" />
            </view>
          </view>
        </view>
      </view>


      <view class="page-section">
        <view class="page-section-title">从第多少页开始</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input type='number' class="weui-input" name="bookBegin" placeholder="页码" />
            </view>
          </view>
        </view>
      </view>


      <view class="page-section">
        <view class="page-section-title">到多少页结束</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input type='number' class="weui-input" name="bookOver" placeholder="页码" />
            </view>
          </view>
        </view>
      </view>

      <view class='top'>
        <button type="primary" formType="submit">打卡</button>
      </view>
    </form>
  </view>

</view>